{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "extends": ["plugin:lvksh/recommended", "plugin:react/recommended"],
    "ignorePatterns": ["!**/*"],
    "plugins": ["lvksh", "react"],
    "env": {
        "browser": true,
        "node": true,
        "es2022": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/react-in-jsx-scope": "off"
    }
}
